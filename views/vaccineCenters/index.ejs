<% layout('layouts/boilerplate')%>
    <h1 class="text-center mb-4">All Vaccine Centers</h1>
    <div id="cluster-map" class="mx-auto"></div>
    <div class="container my-5">


        <% for (let vaccineCenter of vaccineCenters){%>
            <div class="card mb-5">
                <div class="row">
                    <div class="col-md-5">
                        <%if(vaccineCenter.images.length) {%>
                            <img class="img-fluid w-100 h-100" alt="" src="<%=vaccineCenter.images[0].url%>">
                            <% }else {%>
                                <img class="img-fluid" alt=""
                                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/Celp/lz8jjv2gyynjil7lswf4.png">
                                <% } %>
                    </div>
                    <div class="col-md-7 d-flex align-items-center">
                        <div class="card-body">
                            <h5 class="card-title mb-0">
                                <%= vaccineCenter.title %>
                            </h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= vaccineCenter.location%>
                                </small>
                            </p>
                            <p class="card-text mb-0">Services: <%= vaccineCenter.service %>
                            </p>
                            <p class="card-text">
                                Pricing - $<%= vaccineCenter.price %>
                            </p>
                            <p class="card-text">
                                <%= vaccineCenter.description %>
                            </p>

                            <a class="btn btn-primary" href="/VaccineCenters/<%=vaccineCenter._id%>">View
                                <%=vaccineCenter.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>
    <script>
        const mapToken='<%-process.env.MAPBOX_TOKEN%>'
        const vaccineCenters={ features: <%- JSON.stringify(vaccineCenters)%>}
    </script>

    <script src="/javascripts/clusterMap.js"></script>