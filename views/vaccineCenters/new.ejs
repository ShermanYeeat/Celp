<% layout('layouts/boilerplate')%>
    <div class="row mb-5">
        <h1 class="text-center mb-3">New Vaccine Center</h1>
        <div class="col-md-7 mx-auto">
            <form action="/VaccineCenters" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="row">
                    <div class="mb-3 col-6">
                        <label class="form-label" for="title">Name</label>
                        <input class="form-control" type="text" id="title" name="VaccineCenter[title]"
                            placeholder="Name" required>
                    </div>
                    <div class="mb-3 col-6">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="VaccineCenter[location]"
                            placeholder="Enter location" required>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-4">
                        <label class="form-label" for="price">Pricing</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                                aria-describedby="price-label" name="VaccineCenter[price]" required>
                        </div>
                    </div>
                    <div class="mb-3 col-8">
                        <label class="form-label" for="service">Service(s)</label>
                        <select class="form-select" id="service" name="VaccineCenter[service]"
                            aria-label="multiple select">
                            <option selected>Select Service(s) Offered</option>
                            <option value="Walk-In">Walk-In</option>
                            <option value="Appointment">Appointment</option>
                            <option value="Both">Both</option>

                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="VaccineCenter[description]"
                        placeholder="Please give a description of the place." rows="4" required></textarea>
                </div>
                <div class=" mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary btn-block">Add Vaccine Center</button>
                </div>
            </form>
            <a href="/vaccineCenters" class="btn btn-secondary btn-block" role="button">Back
                To All
                Vaccine Center</a>
        </div>
    </div>